<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context="com.example.marmou.miband2.MainActivity">

    <Button
        android:id="@+id/btnRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnRun"
        android:text="Conectar por Bluetooth" />

    <Button
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRun"
        android:onClick="btnTest"
        android:text="Escuchar notificaciones de MiBand" />

    <Button
        android:id="@+id/buttonEn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnTest"
        android:layout_toStartOf="@+id/checkBox"
        android:onClick="btnEnviar"
        android:text="@string/botonEnviar"/>

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vibrar"
        android:ems="10"
        android:hint="NÃºmeros"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Texto"
        android:inputType="textPersonName"
        android:layout_below="@+id/iconCor"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkBox"
        android:layout_alignBottom="@+id/vibrar"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnTest"
        android:layout_toEndOf="@+id/checkBox"
        android:onClick="btnEnvCro"
        android:text="@string/button" />

    <Button
        android:id="@+id/btnIcnMens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonEn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonEn"
        android:text="@string/btnMens"
        android:onClick="btnIcnMens"/>

    <Button
        android:id="@+id/btnLlamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:text="@string/btnLlamar"
        android:onClick="btnLlamar"/>

    <Button
        android:id="@+id/vibrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnIcnMens"
        android:text="@string/btnVibrar"
        android:onClick="vibrar"
        android:layout_alignEnd="@+id/btnIcnMens" />

    <Button
        android:id="@+id/iconCor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btnLlamar"
        android:layout_below="@+id/btnLlamar"
        android:text="@string/btnCorazon"
        android:onClick="iconCor" />

</RelativeLayout>
